<% content_for :title, @photo.title %>

<h1>
  <%= @photo.title %>
</h1>

<p>
  <strong>Dodane przez:</strong>
  <%= "#{@photo.user.full_name}" %>
</p>

<p>
  <strong>Opis:</strong>
  <%= @photo.description %>
</p>

<%= render 'rating_form', photo: @photo, rating: @rating %>

<p>
  <%= image_tag @photo.image_url, height: 400 %>
</p>
